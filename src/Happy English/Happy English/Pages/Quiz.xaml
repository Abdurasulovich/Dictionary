<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Happy_English.ViewModels"
             x:Class="Happy_English.Pages.Quiz"
             x:DataType="viewmodel:QuizPageViewModel">
    <Grid RowDefinitions="*, *" RowSpacing="5">
        <Image Grid.Row="0" Source="quiz_start.png" HeightRequest="250"/>
        <Button Grid.Row="1" VerticalOptions="CenterAndExpand" FontSize="20" Text="Start" BackgroundColor="#78B7BB" HorizontalOptions="CenterAndExpand"
                Command="{Binding StartCommand}" HeightRequest="80" WidthRequest="300"/>
    </Grid>
</ContentPage>